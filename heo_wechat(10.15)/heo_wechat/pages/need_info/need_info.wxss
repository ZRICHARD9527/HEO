page{
  background-color:#b3d4db; /* 页面背景色 */
}
.container{
  display: flex; /* 将对象作为弹性伸缩盒显示 */
  flex-direction: column; /* 灵活的项目将垂直显示，正如一个列一样。 */
  align-items: center;
} /* 使 view.container 中 内容垂直且水平居中 */
.user-avatar{
  width: 200rpx;
  height: 200rpx; 
  margin-top: 160rpx;
  border-radius: 50%; /* 使图片呈现 圆形 */
}
.user-name{
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.moto-container{
  margin-top: 200rpx;
  width: 300rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

.regbtn {
  font-size: 24rpx;
  height: 80rpx;
  background-color: #FCCF00;
  border-radius: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #40404C;
}
button::after {
  border: none;
}